filetype plugin on
syntax on

set autoindent
set backspace=indent,eol,start
set expandtab
set formatoptions+=m
set incsearch
set hlsearch
set matchpairs+=<:>
set modeline
set mouse=a
set ruler
set shiftwidth=4
set softtabstop=4
set guifont=DejaVu\ Sans\ Mono\ 11

au BufRead,BufNewFile *.phps set ft=php
